<!DOCTYPE html>
<html>
<head>
  <title>Recruiter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if !signed_in? %>
	<% else %>
	Signed as: <%= @current_user.email %>
	<%= link_to "Sign Out", signout_path %>
	<% end %>
<div id="banner">
	The Recruiter
	<% if !signed_in? %>
	<% else %>
	<div id="nav">
		<div id="button">
			<%= link_to "Home", root_path %>
		</div>
		<div id="button">
			<%= link_to "Users", users_path %>
		</div>
		<div id="button">
			<%= link_to "Companies", companies_path %>
		</div>
		<div id="button">
			<%= link_to "Candidates", candidates_path %>
		</div>
		<br>
		<div id="button">
			<%= link_to "Contacts", contacts_path %>
		</div>
	<% end %>
		
	</div>
</div>
<% flash.each do |key, value| %>
	<br>
	<div class="flash <%= key%>" style="background-color:red; font-size:20px">
	<%= value %>
	</div>
<% end %>

<%= yield %>

</body>
</html>
