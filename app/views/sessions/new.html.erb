<h1>Sign in</h1>
<%= form_tag sessions_path do %>
    <table>   
     <tr>  
          <td><%= label_tag :email %></td>
            <td><%= text_field_tag :email %>
        </tr>
        <tr>  
          <td><%= label_tag :password %></td> 
           <td><%= password_field_tag :password %>
        </tr>   
     <tr>  
          <td><%= submit_tag "Sign in" %></td>
        </tr> 
   </table>
   <h1>OR</h1>
<div id = "signin">
<%= link_to "Create Account", new_user_path %>
</div>
<% end %>

